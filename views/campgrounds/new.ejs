<% include ../partials/header %>

    <div class="row">
     <h1 style="text-align: center;">Create a NEW Campground</h1>
     <div style="width:30%; margin:40px auto; ">
          <form action="/campgrounds" method="POST">
              <div class="form-group">
                  <label for="name">Name</label>
                  <input class="form-control" type="text" name="name" id="name" placeholder="Yosemite" required>
              </div>
              <div class="form-group">
                  <label for="image">Image Url </label>
                  <input class="form-control" tpye="text" name="image" id="image" placeholder="https://images.unsplash.com/..." required>
              </div>
              <div class="form-group">
                  <label for="price">Price</label>
                  <input class="form-control" type="number" name="price" id="price" placeholder="12.00" min="0.01" step="0.01">
              </div>
              <div class="form-group">
                  <label for="location">Location</label>
                  <input class="form-control" tpye="text" name="location" id="locationTextField" placeholder="Yosemite National Park, CA"  required>
              </div>
              <div class="form-group">
                  <label for="description">Description</label>
                  <input class="form-control" tpye="text" name="description" id="description" placeholder="Californiaâ€™s Sierra Nevada mountains......">
              </div>
        
              <div class="form-group">
                  <button class="btn btn-lg btn-default btn-primary btn-block" type="submit">Submit!</button>
              </div>
          </form>
                 <a href="/campgrounds">Back</a>
      </div>
    </div>
    
<script>
    function init() {
        var input = document.getElementById('locationTextField');
        var autocomplete = new google.maps.places.Autocomplete(input);
    }
    google.maps.event.addDomListener(window, 'load', init);
</script>

